{
  "name": "react-ref-boundary",
  "version": "0.1.3",
  "description": "React context for grouping react references by boundary in react dom, native and web. Ideal for group references for contains checks when using react portals",
  "keywords": [
    "react",
    "provider",
    "context",
    "ref",
    "boundary",
    "group",
    "portal",
    "react-native",
    "react-native-web",
    "native",
    "web",
    "dom",
    "contains",
    "universal",
    "typescript"
  ],
  "repository": "kmalakoff/react-ref-boundary",
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": "./*"
  },
  "main": "dist/cjs/index.js",
  "unpkg": "dist/umd/react-ref-boundary.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "coverage": "tsds link && cross-env NODE_OPTIONS=--experimental-vm-modules jest test/**/*.test.* --collect-coverage",
    "deploy": "tsds deploy",
    "format": "tsds format",
    "lint": "tsds lint",
    "test": "tsds link && cross-env NODE_OPTIONS=--experimental-vm-modules jest test/**/*.test.*",
    "test:engines": "nvu engines npm test",
    "version": "tsds version"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.5",
    "@types/react": "18.0.15",
    "@types/react-native": "0.69.3",
    "cross-env": "^7.0.3",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.4.3",
    "metro-react-native-babel-preset": "^0.72.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-native": "0.69.3",
    "react-native-web": "0.18.4",
    "react-test-renderer": "18.0.0",
    "ts-dev-stack": "^0.8.10"
  },
  "peerDependencies": {
    "react": "*"
  },
  "engines": {
    "node": ">=12"
  },
  "tsds": {
    "source": "src/index.tsx",
    "globals": {
      "react": "React"
    }
  }
}
