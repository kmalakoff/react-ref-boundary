{
  "compilerOptions": {
    "lib": ["es2015"],
    "types": ["mocha", "node"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "test"]
}
